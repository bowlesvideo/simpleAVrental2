generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL_NON_POOLING")
}

model Order {
  id           String   @id
  orderDate    DateTime @default(now())
  eventDate    DateTime
  total        Float
  status       String   @default("pending")
  items        Json
  eventDetails Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model RentalConfig {
  id          String   @id @default("default")
  packages    Json
  addOns      Json
  keyFeatures Json
  addonGroups Json
  updatedAt   DateTime @updatedAt

  @@map("rental_config")
}
